if(color==red):
     if(color!=yellow):
          print("STOP")
     else:
       print("Prepare to stop")
else:
print("GO")

#
amt=int(input("enter the amt "))
if amt<=50:
  discount=5/100*amt
elif amt>50 and amt<=100:
  discount =10/100*amt 
else:
 discount=15/100*amt
final=amt-discount
print("Final Amount is",final)


